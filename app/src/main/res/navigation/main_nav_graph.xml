<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/selectNetwrokFragment"
        android:name="com.app.bustracking.presentation.views.fragments.main.SelectNetworkFragment"
        android:label="fragment_select_netwrok"
        tools:layout="@layout/fragment_select_netwrok" >
        <action
            android:id="@+id/action_selectNetwrokFragment_to_selectRoutesFragment"
            app:destination="@id/selectRoutesFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectRoutesFragment"
        android:name="com.app.bustracking.presentation.views.fragments.main.SelectRoutesFragment"
        android:label="fragment_select_routes"
        tools:layout="@layout/fragment_select_routes" >
        <action
            android:id="@+id/action_selectRoutesFragment_to_selectNetwrokFragment"
            app:popUpTo="@id/selectNetwrokFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.app.bustracking.presentation.views.fragments.main.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_selectNetwrokFragment"
            app:destination="@id/selectNetwrokFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_verifyOTP"
            app:destination="@id/verifyOTPFragment" />

        <argument
            android:name="number"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.app.bustracking.presentation.views.fragments.main.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyOTPFragment"
        android:name="com.app.bustracking.presentation.views.fragments.main.VerifyOTPFragment"
        android:label="fragment_verify_o_t_p"
        tools:layout="@layout/fragment_verify_o_t_p" />
</navigation>